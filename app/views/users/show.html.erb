<% provide(:title, @user.name) %>
<div class="container">
  <div class="row align-items-center">
    <div class="user_info col-md-6">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </div>
    <br>
    <div class="app_info col-md-6">
      <table class="table table-striped table-hover">
        <tbody>
          <tr>
            <td><i class="fas fa-project-diagram fa-lg"></i></td>
            <td><%= link_to 'all my Projects', projects_path %></td>
          </tr>
          <tr>
            <td><i class="fas fa-unlink fa-lg"></i></td>
            <td><%= link_to 'all my external projects', projects_no_group_path %></td>
          </tr>
          <tr>
            <td><i class="fas fa-layer-group fa-lg"></i></td>
            <td><%= link_to 'all my groups', groups_path %></td>
          </tr>
        </tbody>
      </table>    
    </div>
  </div>
</div>